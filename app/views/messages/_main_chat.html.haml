.main_chat
  .group__info
    .group__info__left
      .group__info__left__name
        = @group.name
      .group__info__left__member
        .group__info__left__member__title
          Member : 
        .group__info__left__member__name
          - @group.users.each do |user|
            = user.name
       
    .group__info__right
      = link_to 'Edit',  edit_group_path(@group)
      -# = link_to 'Edit', "/groups/#{@group.id}/edit"

  .message-list
    = render @messages
    
      
  .form
    = form_with model: [@group, @message], html: {class: "new_message"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'



