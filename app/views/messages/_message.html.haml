.message__box
  .message__box__part
    .message__box__part__name
      = message.user.name
    .message__box__part__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__box__word
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?


